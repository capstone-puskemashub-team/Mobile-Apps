<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Capstone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryVariantColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Capstone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Capstone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Capstone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyleTitle">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="fontFamily">@font/poppinssemibold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextContent">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.Small">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
    </style>

    <style name="TextContent.Small.Black">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextContent.Tittle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>